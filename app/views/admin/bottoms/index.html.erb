<div class="container my-5">
  <div class="row">
    <div class="col-md-auto mb-3 bg-light">
      <h4>レビュー一覧</h4>
    </div>
  </div>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>アイテム画像</th>
        <th>レビュー</th>
      </tr>
    </thead>
      <tbody>
        <tr>
        <% @bottoms.each do |bottom| %>
          <td><%= bottom.user_id %></td>
          <td>
            <%= link_to admin_bottom_path(bottom.id) do %>
              <%= image_tag bottom.bottomImage, size: "100x100" %>
            <% end %>
          </td>
          <td><%= bottom.review %></td>
        <% end %>
        </tr>
      </tbody>
  </table>
</div>