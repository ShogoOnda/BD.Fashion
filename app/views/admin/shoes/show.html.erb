<div class="container my-5">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h4>ShoesReview詳細</h4>
    </div>
  </div>
  <div class="row my-3">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @shoe.user_id %></td>
        </tr>
        <tr>
          <th>アイテム画像</th>
          <td><%= image_tag @shoe.shoeImage, size: "300x300" %></td>
        </tr>
        <tr>
          <th>レビュー</th>
          <td><%= @shoe.review %></td>
          <td>
            <% if @shoe.review.present? %>
              <%=link_to "レビューを削除する", @shoe.review , method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn btn-danger" %>
             <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row my-2">
    <div class="field mx-auto my-5">
      <%=link_to "アイテムを削除する", admin_shoe_path(@shoe.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn btn-danger" %>
    </div>
  </div>
</div>