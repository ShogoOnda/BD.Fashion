<div class="container my-5">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h4><%= @user.name %>さんの会員詳細</h4>
    </div>
  </div>
  <div class="row my-3">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th>会員ID</th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th>氏名</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @user.is_deleted == true %>
            退会
            <% else @user.is_deleted == false %>
            <div class="text-success font-weight-bold">
              有効
            </div>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row my-2">
    <div class="col-md-6 text-right">
      <%= link_to "編集する", edit_admin_user_path(@user.id), class:"btn btn-success" %>
    </div>
    <div class="col-md-6 text-left">
      <%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>