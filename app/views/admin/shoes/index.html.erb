<div class="container my-5">
  <div class="row">
    <div class="col-md-auto mb-3 bg-light">
      <h4>レビュー一覧</h4>
    </div>
  </div>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>アイテム画像</th>
        <th>レビュー</th>
      </tr>
    </thead>
    <% @shoes.each do |shoe| %>
      <tbody>
        <tr>
          <td><%= shoe.user_id %></td>
          <td>
            <%= link_to admin_shoe_path(shoe.id) do %>
              <%= image_tag shoe.shoeImage, size: "100x100" %>
            <% end %>
          </td>
          <td><%= shoe.review %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>