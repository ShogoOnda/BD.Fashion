<div class="container my-5">
  <div class="row">
    <div class="col-md-auto bg-light">
      <h4 class="font-weight-bold">
        <%= @user.name %>さんの会員情報編集
      </h4>
    </div>
  </div>
  <%= form_with model: @user, url: admin_user_path, method: :patch do |f| %>
    <div class="row my-3">
      <table class="table  table-borderless">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>名前</th>
            <td>
              <%= f.text_field :name %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <td>
              <%= f.radio_button :is_deleted, false %>有効
              <%= f.radio_button :is_deleted, true %>退会
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="row my-3">
      <div class="col-md-10 text-center">
        <%= f.submit '変更を保存', class:"btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>