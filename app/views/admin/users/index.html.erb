<div class="container my-5">
  <div class="row">
    <div class="col-md-auto mb-3 bg-light">
      <h4>会員一覧</h4>
    </div>
  </div>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <% @users.each do |user| %>
      <tbody>
        <tr>
          <td><%=user.id %></td>
          <td><%= link_to user.name, admin_user_path(user.id) %></td>
          <td><%=user.email %></td>
          <td>
            <% if user.is_deleted == false %>
              <div class="text-success">有効</div>
            <% else user.is_deleted == true %>
              <div class="text-black-50">退会</div>
            <% end %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>