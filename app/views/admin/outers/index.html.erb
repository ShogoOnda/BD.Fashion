<div class="container my-5">
  <div class="row">
    <div class="col-md-auto mb-3 bg-light">
      <h4>レビュー一覧</h4>
    </div>
  </div>

  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>アイテム画像</th>
        <th>レビュー</th>
      </tr>
    </thead>
    <% @outers.each do |outer| %>
      <tbody>
        <tr>
          <td><%= outer.user_id %></td>
          <td>
            <%= link_to admin_outer_path(outer.id) do %>
              <%= image_tag outer.outerImage, size: "100x100" %>
            <% end %>
          </td>
          <td><%= outer.review %></td>
        </tr>
      </tbody>
  <% end %>
  </table>
</div>