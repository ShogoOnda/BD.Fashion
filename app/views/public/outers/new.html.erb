<div class="container my-5">
  <div class="row">
    <div class="col-md-auto mb-3 bg-light">
      <h4>アウター新規登録</h4>
    </div>
  </div>
  <div class="col-md-10 offset-md-2">
  <%= form_with model: @outer, url: outers_path do |f| %>
    <div class="field row mx-auto">
      <div class="col-md-2 col-form-label">
        <label for="item_name">アウター画像</label>
      </div>
      <div class="form-group col-md-8 my-1">
        <%= f.file_field :outerImage, accept: "image/*" %>
      </div>
    </div>
    <div class="field row mx-auto">
      <div class="col-md-2 col-form-label">
        <label for="item_name">品名</label>
      </div>
      <div class="form-group col-md-8">
        <%= f.text_field :name, class: "form-control w60" %>
      </div>
    </div>
    <div class="field row mx-auto">
      <div class="col-md-2 col-form-label">
        <label for="item_name">ブランド</label>
      </div>
      <div class="form-group col-md-8">
        <%= f.text_field :brand, class: "form-control w60" %>
      </div>
    </div>
    <div class="field row mx-auto">
      <div class="col-md-2 col-form-label">
        <label for="item_name">サイズ</label>
      </div>
      <div class="form-group col-md-8">
        <%= f.text_field :size, class: "form-control w60" %>
      </div>
    </div>
    <div class="field row mx-auto">
      <div class="col-2 col-form-label">
        <label for="item_name">シーズン</label>
      </div>
      <div class="form-group col-4 mt-2">
        <%= f.select :season, {"All": 0, "春": 1, "夏": 2, "秋": 1, "冬": 2},{ include_blank: '選択してください'}, { class: 'form-select form-select-lg mb-3' , required: true } %>
      </div>
    </div>
    <div class="field row mx-auto">
      <div class="col-md-2 col-form-label">
        <label for="item_name">レビュー</label>
      </div>
      <div class="form-group col-md-8">
        <%= f.text_area :review, class: "form-control" %>
      </div>
    </div>
  <div class="form-group col-md-8 offset-md-2 mt-2">
   <%= f.submit '登録', class: "btn btn-success" %>
  </div>
  <% end %>
</div>
