<div class="container my-5">
  <!--weatherテンプレート-->
  <%= render 'layouts/weather' %>
  <!--weatherテンプレート-->

  <div class="row my-2 justify-content-center">
    <h3 class="col-md-12 mt-4 mb-4 font-weight-bold text-center">
      所持服一覧(※登録できます。)
    </h3>
  </div>
    <div class="tab-panel">
    	<!--タブ-->
      	<ul class="tab-group">
      		<li class="tab tab-A is-active">アウター</li>
      		<li class="tab tab-B">インナー</li>
      		<li class="tab tab-C">ボトム</li>
      		<li class="tab tab-C">シューズ</li>
      	</ul>
    	<!--タブを切り替えて表示するコンテンツ-->
      <div class="panel tab-A is-show">
        <div class="row my-3">
          <h4 class="col-5 font-weight-bold">
            アウター
          </h4>
        </div>
        <div class="row">
          <div class="col-3 d-flex flex-column bd-highlight mb-3">
            <div class="pt-2 text-center">
              <%= image_tag 'outer.jpg', size: "200x200", class:"outer" %>
            </div>
            <div class="pt-2 text-center">
              ジャケット
            </div>
          </div>
        </div>
      </div>
    	<div class="panel tab-B">
        <div class="row my-3">
          <h4 class="col-5 font-weight-bold">
            インナー
          </h4>
        </div>
        <div class="row my-3">
          <div class="col-3 d-flex flex-column bd-highlight mb-3">
            <div class="pt-2 text-center">
              <%= image_tag 'inner.jpg', size: "200x200", class:"outer" %>
            </div>
            <div class="pt-2 text-center">
              シャツ
            </div>
          </div>
        </div>
    	</div>
    	<div class="panel tab-C">
        <div class="row my-3">
          <h4 class="col-5 font-weight-bold">
            ボトム
          </h4>
        </div>
        <div class="row my-3">
          <div class="col-auto d-flex flex-column bd-highlight mb-3">
            <div class="pt-2 text-center">
              <%= image_tag 'pants.jpg', size: "200x200", class:"outer" %>
            </div>
            <div class="pt-2 text-center">
              パンツ
            </div>
          </div>
        </div>
    	</div>
    	<div class="panel tab-D">
        <div class="row my-3">
          <h4 class="col-5 font-weight-bold">
            シューズ
          </h4>
        </div>
      <div class="row my-3">
        <div class="col-3 d-flex flex-column bd-highlight mb-3">
          <div class="pt-2 text-center">
            <%= image_tag 'shoes.jpg', size: "200x200", class:"outer" %>
          </div>
          <div class="pt-2 text-center">
            スニーカー
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
