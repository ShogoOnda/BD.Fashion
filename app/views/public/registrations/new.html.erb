<div class="container my-5">
  <div class="row">
    <div class="col-md-auto md-3 bg-light">
      <h4>新規登録</h4>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row my-3">
      <div class="col-md-3">
        名前
      </div>
      <div class="col-md-9 text-left">
        <%= f.text_field :name %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3">
        メールアドレス
      </div>
      <div class="col-md-9 text-left">
        <%= f.email_field :email %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3">
        パスワード(６文字以上)
      </div>
      <div class="col-md-9 text-left">
        <%= f.password_field :password %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3">
        パスワード(確認用)
      </div>
      <div class="col-md-9 text-left">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "password_confirm" %>
      </div>
    </div>

    <div class="row my-3">
      <div class="col-md-3"></div>
      <div class="col-md-9 my-3 text-left">
        <%= f.submit '新規登録', class:"btn btn-success" %>
      </div>
    </div>
  <% end %>
  <div class="row my-3">
    <div class="col-md-auto sm-3 bg-light">
      <h4>すでに登録済みの方</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-md-auto">
      <%= link_to "こちら", user_session_path %>  からログインしてください。
    </div>
  </div>
</div>