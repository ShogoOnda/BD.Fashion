<div class="container my-5">
  <div class="row  my-5">
    <h4 class="col-auto offset-2 font-weight-bold">
      シューズ詳細
    </h4>
  </div>
  <div class="row my-5 justify-content-center">
    <div class="col-4 offset-2">
      <%= image_tag @shoe.shoeImage, size: "300x300" %>
    </div>
    <div class="col-4 mt-4">
      <ul class="list-unstyled">
        <li class="my-3 font-weight-bold">品名：<%= @shoe.name %></li>
        <li class="my-3">サイズ：<%= @shoe.size %>cm</li>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="field mx-auto my-5">
      <%= link_to "編集する", edit_shoe_path(@shoe.id), class:"btn btn-success" %>
    </div>
  </div>
</div>