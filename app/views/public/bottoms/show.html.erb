<div class="container my-5">
  <div class="row  my-5">
    <h4 class="col-auto offset-2 font-weight-bold">
      ボトム詳細
    </h4>
  </div>
  <div class="row my-5 justify-content-center">
    <div class="col-4 offset-2">
      <%= image_tag @bottom.bottomImage, size: "300x300" %>
    </div>
    <div class="col-4 mt-4">
      <ul class="list-unstyled">
        <li class="my-3">
          <% @bottom.tags.each do |tag| %>
              <%= tag.name %>
          <% end %>
        </li>
        <li class="my-3 font-weight-bold">品名：<%= @bottom.name %></li>
        <li class="my-3">ブランド：<%= @bottom.brand %></li>
        <li class="my-3">サイズ：<%= @bottom.size %></li>
        <li class="my-3">レビュー：<%= @bottom.review %></li>
      </ul>
    </div>
  </div>
  <div class="row">
    <% if @bottom.user.id == current_user.id %>
    <div class="field mx-auto my-5">
      <%= link_to "編集する", edit_bottom_path(@bottom.id), class:"btn btn-success" %>
    </div>
    <div class="field mx-auto my-5">
      <%=link_to "削除する", bottom_path(@bottom.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn btn-danger" %>
    </div>
    <% end %>
  </div>


<h3>コメント一覧</h3>
<% @comments.each do |c| %>
  <%= c.body %>
<% end %>

<% if user_signed_in? %>
  <%= form_with model: [@bottom, @comment] do |f| %>
    <%= f.text_area :body, placeholder: "コメントする" %>
    <%= f.submit "SEND" %>
  <% end %>
<% end %>

</div>